@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<BirthdayCalculator.Models.BirthDateModel>

<div class="text-center">
    <h1 class="display-4">Welkom!</h1>
    <a class="btn btn-primary" asp-action="BirthdayForm">Bereken je verjaardag!</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th></>
                <th>Name</th>
                <th>Birthday</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (BirthDateModel birthday in Model)
            {
                <tr>
                    <td><a asp-action="GetBirthday" asp-route-id="@birthday.Id">@birthday.Id</a></td>
                    <td>@birthday.Name</td>
                    <td>@birthday.BirthDate</td>
                    <td> <a class="btn btn-primary-delete" asp-action="DeleteBirthday" asp-route-id="@birthday.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
